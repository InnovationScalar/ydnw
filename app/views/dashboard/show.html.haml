.content
  .dashboard
    %h4 My posts
    = link_to("âž• New Blog Post", posts_path, method: :post, class: "btn btn-primary")
  .posts
    %ul.list-unstyled
      - @posts.each do |post|
        %li.media
          .media-body
            %h5.mt-0.mb-1= post.title
            %ul
              %li= link_to "Google Doc", "https://docs.google.com/document/d/#{post.google_doc}/edit"
              %li= link_to "View Post", "#{current_user.username}/#{post.id}"
              %li= link_to "Edit Post", edit_post_path(post)
              %li= link_to "Delete Post", post_path(post), method: :delete
